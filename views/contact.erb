<div class="medium-6 columns content">
	<form action="/contact" method="post">
		<label for="name">Name
		<input type="text" name="name" placeholder="Name">
		</label>
		<label for="email">Email
		<input type="text" name="email" placeholder="Email">
		</label>
		<label>Message
		<textarea name="message" placeholder="Say hello!" style="height: 12rem;"></textarea>
		</label for="message">
		<button type="submit" class="button expanded" value="Send">Submit</button>
	</form>
</div>