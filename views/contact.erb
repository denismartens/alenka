<% if locals.has_key?(:notice) %>
	<div data-alert class="medium-12 columns text-center alert-box <%=notice%>">
  	<% if notice == 'success' %>
  		Thank you for your message!
  	<% elsif notice == 'failure' %>
  		Your message could not be sent.
		<% end %>
  	<a href="/contact" class="close">&times;</a>
	</div>
<% end %>
<div class="medium-6 columns content">
	<br />
	<img class="thumbnail" src=<%= File.join(@images_dir, @image) %>>
